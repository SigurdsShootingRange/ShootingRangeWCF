        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="455" Width="694">
    <Grid>
        <Button x:Name="button" Content="Send" FontFamily="Verdana" FontSize="18" FontStyle="Normal" FontWeight="DemiBold" HorizontalAlignment="Left" Margin="526,354,0,0" VerticalAlignment="Top" Width="150" Height="60" BorderThickness="3" BorderBrush="DarkCyan" Click="button_Click"/>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="339" Margin="10,10,0,0" TextWrapping="Wrap" Text="Your Messages goes here" VerticalAlignment="Top" Width="666" BorderThickness="3" BorderBrush="DarkCyan" FontSize="15"/>
        <TextBox x:Name="TypingBox" HorizontalAlignment="Left" Height="60" Margin="10,354,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="511" BorderThickness="3" BorderBrush="DarkCyan"/>
    </Grid>
</Window>
